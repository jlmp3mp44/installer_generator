<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/20"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.WelcomeController"
  style="-fx-background-color: #40E0D0; -fx-padding: 20;" prefWidth="600" prefHeight="600">

  <Label text="Welcome to the installer generator" style="-fx-font-size: 24px; -fx-text-fill: white;" wrapText="true"/>

  <Label text="This application can convert your py or jar files to exe or msi format. Choose file paths, enter license keys if needed, or create a desktop shortcut."
    style="-fx-font-size: 16px; -fx-text-fill: white;" wrapText="true"/>

  <Button text="Start" onAction="#handleStart" style="-fx-background-color: #33B7B7; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5; -fx-background-radius: 5;" />
</VBox>
